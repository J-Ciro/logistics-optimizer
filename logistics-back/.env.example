# Backend Environment Variables
# Copy this file to .env for local development

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
LOG_LEVEL=debug

# MongoDB Configuration
# Option 1: No authentication (local development)
MONGODB_URI=mongodb://localhost:27017/logistics-optimizer

# Option 2: With authentication (Docker or production)
# MONGODB_URI=mongodb://admin:adminpassword@localhost:27017/logistics-optimizer?authSource=admin

# Option 3: MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/logistics-optimizer

# Adapter Configuration
ADAPTER_TIMEOUT=5000

# Cache Configuration
CACHE_TTL_SECONDS=300
